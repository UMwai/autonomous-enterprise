# Autonomous Enterprise Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="Autonomous Enterprise"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://ae:ae@localhost:5432/ae

# =============================================================================
# TEMPORAL
# =============================================================================
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=autonomous-enterprise

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# OpenAI (for embeddings and GPT models)
OPENAI_API_KEY=sk-...

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Google (for Gemini models)
GOOGLE_API_KEY=...

# =============================================================================
# MODEL ROUTING (Premium models - heavily subsidized for max intelligence)
# =============================================================================
TIER1_MODEL=claude-opus-4-5-20251101
TIER2_MODEL=gpt-5.2-xhigh
TIER3_MODEL=gemini-3-pro-preview

# Budget limits (USD)
DEFAULT_RUN_BUDGET=10.0
MAX_RUN_BUDGET=100.0

# =============================================================================
# STRIPE (Monetization)
# =============================================================================
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# DEPLOYMENT
# =============================================================================
VERCEL_TOKEN=...
NETLIFY_TOKEN=...

# =============================================================================
# SANDBOX (E2B)
# =============================================================================
E2B_API_KEY=...

# =============================================================================
# OBSERVABILITY
# =============================================================================
LANGSMITH_API_KEY=ls__...
LANGSMITH_PROJECT=autonomous-enterprise
PHOENIX_ENDPOINT=http://localhost:6006
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# RAG / VECTOR STORE
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
VECTOR_DIMENSIONS=1536
